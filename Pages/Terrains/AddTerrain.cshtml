@page
@model GestionTerrains.Pages.Terrains.AddTerrainModel

@{
    ViewData["Title"] = "Ajouter Terrain";
}

<div class="d-flex justify-content-center align-items-center" style="padding-top: 100px; min-height: 100vh;">
    <div style="width: 500px; background-image: url('images /bg_3.jpg');">
        <h1 class="text-center">Ajouter un Terrain</h1>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form method="post">
        
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="Terrain.Nom" class="control-label"></label>
                        <input asp-for="Terrain.Nom" class="form-control" />
                        <span asp-validation-for="Terrain.Nom" class="text-danger"></span>
                    </div>

  
                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="Terrain.Type" class="control-label"></label>
                        <select asp-for="Terrain.Type" class="form-control">
                            <option value="" style="background-color:rgb(34,40,49)"> Sélectionner un type </option>
                            <option value="5-5" style="background-color:rgb(34,40,49)">5-5</option>
                            <option value="7-7" style="background-color:rgb(34,40,49)">7-7</option>
                        </select>
                        <span asp-validation-for="Terrain.Type" class="text-danger"></span>
                    </div>

   
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Terrain.Disponible" /> @Html.DisplayNameFor(model => model.Terrain.Disponible)
                        </label>
                    </div>

      
                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="Terrain.PrixParHeure" class="control-label"></label>
                        <input asp-for="Terrain.PrixParHeure" type="number" class="form-control" step="0.01" />
                        <span asp-validation-for="Terrain.PrixParHeure" class="text-danger"></span>
                    </div>

   
                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label asp-for="Terrain.StaffId" class="control-label"></label>
                        <select asp-for="Terrain.StaffId" class="form-control">
                            <option value="" style="background-color:rgb(34,40,49)"> Sélectionner un responsable </option>
                            @foreach (var staff in Model.Staffs)
                            {
                                <option value="@staff.Id" style="background-color:rgb(34,40,49)">@staff.Nom @staff.Prenom</option>
                            }
                        </select>
                        <span asp-validation-for="Terrain.StaffId" class="text-danger"></span>
                    </div>

                    
                    <div class="form-group">
                        <label asp-for="Terrain.ImagePath" class="control-label"></label>
                        <input type="file" asp-for="Terrain.ImagePath" class="form-control" />
                        <span asp-validation-for="Terrain.ImagePath" class="text-danger"></span>
                    </div>

                    
                    <div class="form-group text-center">
                        <input type="submit" value="Ajouter" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center mt-3">
            <a asp-page="ListeTerrain" class="btn btn-outline-primary">Retourner à la liste des terrains</a>
        </div>
        <div class="gif-container">
            <img src="~/gifs/player1.gif">
        </div>
	</div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
