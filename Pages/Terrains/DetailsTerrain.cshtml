@page
@model GestionTerrains.Pages.Terrains.DetailsTerrainModel

@{
    ViewData["Title"] = "Détails du Terrain";
}

<div class="d-flex justify-content-center align-items-center" style="padding-top: 100px; min-height: 100vh;">
    <div style="width: 600px;">
        <h4 class="text-center">@Model.Terrain.Nom</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <!-- Affichage de l'image -->
                @if (!string.IsNullOrEmpty(Model.Terrain.ImagePath))
                {
                    <img src="~/images/terrains/terrain1.jpg" alt="Image du terrain" class="img-fluid rounded" />
                }
                else
                {
                    <p>Aucune image disponible</p>
                }
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Terrain.Nom)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Terrain.Nom)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Terrain.Type)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Terrain.Type)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Terrain.Disponible)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Terrain.Disponible)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Terrain.PrixParHeure)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Terrain.PrixParHeure)
                    </dd>

                    <!-- Affichage du responsable -->
                    <dt class="col-sm-4">
                        Responsable
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Terrain.Responsable.Nom @Model.Terrain.Responsable.Prenom
                    </dd>
                </dl>
            </div>
        </div>
        <div class="text-center mt-3">
            <a asp-page="./ModifierTerrain" asp-route-id="@Model.Terrain.Id" class="btn btn-outline-secondary">Modifier</a>
            <a asp-page="./ListeTerrain" class="btn btn-info">Retourner à la liste des terrains</a>
        </div>
    </div>
</div>
